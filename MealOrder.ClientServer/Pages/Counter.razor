@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<Alert Description="Xeta var" Type="danger" test=@currentCount OnClosed="@OnClosed" Visible="@Visible"></Alert>

<Image alt="necesen" src="https://plus.unsplash.com/premium_photo-1673448391005-d65e815bd026?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" width="50px" height="50px" ></Image>
@code {
    private int currentCount = 0;
    public bool IsAktiv { get; set; } = true;

    private void IncrementCount()
    {
        currentCount++;
    }
    public bool Visible { get; set; } = true;

    public void OnClosed()
    {
        Visible = false;
        StateHasChanged();
    }

}
